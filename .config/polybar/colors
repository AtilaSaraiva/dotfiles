; you can make use of these colors:
white       = ${xrdb:color7  : #ffffff}
light_white = ${xrdb:color15 : #aaaaaa}
black       = ${xrdb:color0  : #000000}
light_black = ${xrdb:color8  : #555555}
red         = ${xrdb:color1  : #555555}
green       = ${xrdb:color2  : #555555}
yellow      = ${xrdb:color3  : #555555}
blue        = ${xrdb:color4  : #555555}
magenta     = ${xrdb:color5  : #555555}
cyan        = ${xrdb:color6  : #555555}

foreground     = ${xrdb:color7  : #ffffff}
foreground-alt = ${xrdb:color15 : #aaaaaa}
background     = ${xrdb:color0  : #000000}
background-alt = ${xrdb:color8  : #555555}
primary        = ${xrdb:color2  : #00ff00}
secondary      = ${xrdb:color1  : #ff0000}
alert          = ${xrdb:color3  : #ffff00}
